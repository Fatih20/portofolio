---
import type { Gradiented } from "@/types/cms";
type CardProp = Gradiented;
const { gradientEndColor, gradientStartColor } = Astro.props as CardProp;
---

<article
  class={`bg-black-500 group w-full md:min-h-cardDesktop rounded-xl hover:bg-gradient-to-b flex flex-col justify-start items-start box-border p-4 gap-1 hover:shadow-hoveredCard hover:scale-101 transition-all cursor-pointer h-full relative card`}
  style={`
    --tw-gradient-from: ${gradientStartColor};
    --tw-gradient-to: ${gradientEndColor};
    --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to);
    --tw-shadow-color: ${gradientStartColor};
    --tw-shadow: var(--tw-shadow-colored);
`}
>
  <slot />
</article>

<style is:global>
  .card .card-text-container * {
    @apply mix-blend-darken
  }

  .card * {
    @apply text-silver-100
  }

</style>