---
import type { ProjectCardContent } from "@/types/cms";
import { dateConverter } from "@/utils";
import { months } from "@/utils";
import Card from "./Card.astro";

type ProjectCardProp = ProjectCardContent;
const {
  id,
  projectName,
  projectEndDate,
  projectStartDate,
  projectLink,
  repositoryLink,
  shortDescription,
  gradientStartColor,
  gradientEndColor,
  ongoing,
} = Astro.props as ProjectCardProp;

const { month: startMonth, year: startYear } = dateConverter(projectStartDate);
const { month: endMonth, year: endYear } = projectEndDate
  ? dateConverter(projectEndDate)
  : { month: 0, year: 0 };
---

<Card
  gradientEndColor={gradientEndColor}
  gradientStartColor={gradientStartColor}
>
  <a
    href={`/hobby-project/${id}`}
    target="_blank"
    aria-label={`Link to the page for ${projectName}`}
    class="absolute inset-0"></a>
  <h2 class="text-xl lg:text-2xl text-silver-100 text-left font-bold">
    {projectName}
  </h2>
  <p class="text-sm lg:text-base text-silver-100 font-medium">
    {months[startMonth - 1]}
    {startYear}
    {ongoing ? "- Now" : ""}
    {projectEndDate ? `- ${months[endMonth - 1]} ${endYear}` : ""}
  </p>
  <p class="text-sm lg:text-base text-silver-100 flex-grow">
    {shortDescription}
  </p>
  <div class="flex justify-center items-center gap-4 text-silver-100 mt-2">
    {
      repositoryLink && (
        <a
          href={repositoryLink}
          target="_blank"
          onclick="(e) => e.stopPropagation()"
          class="transition-colors hover:scale-105 relative z-10"
          aria-label={`Link to the repository of ${projectName}`}
        >
          <i class="fa-brands fa-github text-3xl" />
        </a>
      )
    }
    {
      projectLink && (
        <a
          href={projectLink}
          target="_blank"
          onclick="(e) => e.stopPropagation()"
          class="transition-colors hover:scale-105 relative z-10"
          aria-label={`Link to the ${projectName}`}
        >
          <i class="fa-solid fa-link  text-2xl" />
        </a>
      )
    }
  </div>
</Card>

