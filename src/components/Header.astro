---
import type { HeaderOption } from "@/types";

type HeaderProp = {
    activeNavigationOption : HeaderOption
}

const {activeNavigationOption} = Astro.props as HeaderProp
---

<nav class="h-headerHeight bg-none px-horizontalPaddingMobile lg:px-horizontalPaddingDesktop py-2 box-border fixed top-0 w-full text-xl lg:text-lg font-bold text-black-100 flex items-center justify-start gap-4">
    <a href="/" class={`${activeNavigationOption === "home" ? 'text-silver-100' : ''} hover:text-silver-100 transition-colors`}>Home</a>
    <a href="/portofolio" class={`${activeNavigationOption === "portofolio" ? 'text-silver-100' : ''} hover:text-silver-100 transition-colors`}>Portofolio</a>
</nav>