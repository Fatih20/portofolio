---
import type { ProjectCardContent } from "@/types";
import { dateConverter } from "@/utils";
import Spacer from "./Spacer.astro";
import { months } from "@/utils";

    type ProjectCardProp = ProjectCardContent
    const {projectName, projectEndDate, projectStartDate, projectLink, repositoryLink, shortDescription, gradientStartColor, gradientEndColor} = Astro.props as ProjectCardProp

    const {month : startMonth, year : startYear} = dateConverter(projectStartDate);
    const {month : endMonth, year : endYear} = projectEndDate ? dateConverter(projectEndDate) : {month : 0, year : 0};
---

<article class={`w-full h-48 rounded-xl bg-gradient-to-b from-silver-100 to-black-500 flex flex-col justify-start items-start box-border p-4 gap-1 hover:shadow-hoveredCard hover:scale-101 transition-all cursor-pointer`} style={`
    --tw-gradient-from: ${gradientStartColor};
    --tw-gradient-to: ${gradientEndColor};
    --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to);
    --tw-shadow-color: ${gradientStartColor};
    --tw-shadow: var(--tw-shadow-colored);
`}>
    <h2 class="text-2xl text-silver-100 text-left font-bold">{projectName}</h2>
    <p class="text-base text-silver-100 font-medium">{months[startMonth - 1]} {startYear} {projectEndDate ? `- ${months[endMonth - 1]} ${endYear}` : ''}
    </p>
    <p class="text-base text-silver-100 flex-grow">{shortDescription}</p>
    <div class="flex justify-center items-center gap-4 text-silver-100">
        {projectLink &&
        <a href={projectLink} target="_blank" onclick="(e) => e.stopPropagation()" class="transition-colors"><i class="fa-brands fa-github text-3xl"></i></a>
        }
        {repositoryLink &&
        <a href={repositoryLink} target="_blank" onclick="(e) => e.stopPropagation()" class="transition-colors"><i class="fa-solid fa-up-right-from-square text-2xl"></i></a>
        }
    </div>

</article>