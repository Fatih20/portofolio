---
import type { Gradiented } from "@/types/cms";

const { gradientEndColor, gradientStartColor } = {
    gradientEndColor : "#ffffff",
    gradientStartColor : "#d32626"
} as Gradiented;

---
<div class="w-full h-screen bg-silver-100 flex flex-col items-center justify-center">
    <article
  class={`bg-black-500 group md:min-h-cardDesktop rounded-xl hover:bg-gradient-to-b flex flex-col justify-start items-start box-border p-4 gap-1 hover:shadow-hoveredCard hover:scale-101 transition-all cursor-pointer relative card`}
  style={`
    --tw-gradient-from: ${gradientStartColor};
    --tw-gradient-to: ${gradientEndColor};
    --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to);
    --tw-shadow-color: ${gradientStartColor};
    --tw-shadow: var(--tw-shadow-colored);
`}
>
<div>
    <h2 class="text-silver-100 mix-blend-darken">Title</h2>
    <h2 class="text-silver-100 mix-blend-darken">Title</h2>
</div>
</article>

<article
  class={`bg-black-500 group md:min-h-cardDesktop rounded-xl hover:bg-gradient-to-b flex flex-col justify-start items-start box-border p-4 gap-1 hover:shadow-hoveredCard hover:scale-101 transition-all cursor-pointer relative card`}
